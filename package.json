{
  "name": "bitmidi.com",
  "description": "Wayback machine for old-school MIDI files",
  "version": "1.0.0",
  "author": {
    "name": "Feross Aboukhadijeh",
    "email": "feross@feross.org",
    "url": "https://feross.org"
  },
  "ava": {
    "require": [
      "@babel/register"
    ],
    "babel": false,
    "compileEnhancements": false
  },
  "babel": {
    "plugins": [
      [
        "@babel/plugin-transform-modules-commonjs"
      ],
      [
        "@babel/plugin-transform-react-jsx",
        {
          "pragma": "h",
          "pragmaFrag": "\"span\"",
          "useBuiltIns": true
        }
      ],
      [
        "@babel/plugin-proposal-object-rest-spread",
        {
          "useBuiltIns": true
        }
      ],
      [
        "@babel/plugin-proposal-class-properties",
        {
          "loose": true
        }
      ]
    ]
  },
  "browser": {
    "./secret/index.js": false,
    "./src/api/index.mjs": "./src/browser/api.mjs",
    "./src/server/start.mjs": "./src/browser/index.mjs",
    "url": false
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "bugs": {
    "url": "https://github.com/feross/bitmidi.com/issues"
  },
  "dependencies": {
    "@babel/core": "^7.0.0-beta.49",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.49",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.49",
    "@babel/plugin-transform-modules-commonjs": "^7.0.0-beta.49",
    "@babel/plugin-transform-react-jsx": "^7.0.0-beta.49",
    "@babel/register": "^7.0.0-beta.49",
    "classnames": "^2.2.5",
    "common-tags": "^1.4.0",
    "connect-sqlite3": "^0.9.9",
    "debug": "^3.0.0",
    "ejs": "^2.5.6",
    "express": "^4.15.3",
    "express-promise-router": "^3.0.2",
    "express-session": "^1.15.3",
    "hyphenate-style-name": "^1.0.2",
    "knex": "^0.14.6",
    "memo-async-lru": "^1.0.1",
    "mollusc": "^2.0.0",
    "objection": "^1.1.10",
    "path-to-regexp": "^2.1.0",
    "preact": "^8.2.1",
    "preact-context-provider": "^1.1.1",
    "sqlite3": "^4.0.0",
    "tachyons": "^4.7.4",
    "throttleit": "^1.0.0",
    "undom": "^0.3.3",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.2",
    "babelify": "^9.0.0",
    "browserify": "^16.2.2",
    "disc": "^1.3.3",
    "glob": "^7.1.2",
    "husky": "^0.14.3",
    "minimist": "^1.2.0",
    "nodemon": "^1.15.1",
    "ora": "^2.1.0",
    "puppeteer": "^1.1.0",
    "purify-css": "^1.2.6",
    "rimraf": "^2.6.2",
    "standard": "^11.0.0",
    "tinyify": "^2.4.1",
    "watchify": "^3.11.0"
  },
  "homepage": "https://bitmidi.com",
  "license": "-",
  "main": "./src/server/start",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git://github.com/feross/bitmidi.com.git"
  },
  "scripts": {
    "build": "npm run build-css && npm run build-js && chmod 777 db/",
    "build-css": "node -r @babel/register ./tools/build-css",
    "build-js": "NODE_ENV=production browserify --no-detect-globals --extension mjs --plugin tinyify . > static/bundle.js",
    "knex": "knex --knexfile tools/knexfile.js --cwd .",
    "prepush": "npm test",
    "secret-download": "rsync -a -O -v --delete -e \"ssh -p 44444\" feross@future:\"/home/feross/www/bitmidi.com/secret/\" secret/",
    "secret-upload": "rsync -a -O -v --delete -e \"ssh -p 44444\" secret/ feross@future:\"/home/feross/www/bitmidi.com/secret/\"",
    "size": "npm run size-js && npm run size-css && npm run size-disc",
    "size-css": "npm run build-css && cat static/bundle.css | gzip | wc -c",
    "size-disc": "browserify --no-detect-globals --extension mjs --plugin tinyify --full-paths . | discify --open",
    "size-js": "npm run build-js && cat static/bundle.js | gzip | wc -c",
    "start": "node -r @babel/register src/server/start",
    "test": "npm run test-lint && npm run test-ava",
    "test-ava": "echo \"skipping ava tests -- npm run build && ava 'test/**/*.js'\"",
    "test-lint": "standard '**/*.js' '**/*.mjs'",
    "watch": "npm run watch-css & npm run watch-js & npm run watch-server",
    "watch-css": "nodemon --exec 'npm run build-css -- --verbose' --watch src/server --ext css",
    "watch-js": "watchify --extension mjs . --debug --verbose --outfile static/bundle.js",
    "watch-server": "DEBUG=bitmidi* DEBUG_DEPTH=1 nodemon -r @babel/register --ext js,mjs,json,ejs --ignore static --ignore src/browser"
  },
  "standard": {
    "parser": "babel-eslint"
  }
}
